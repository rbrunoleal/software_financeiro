<div class="table-wrapper">
  <div class="table-title">
      <div class="row">
          <div class="col-sm-6">
            <h2>Gerenciar <b>Bancos</b></h2>
          </div>
      		<div class="col-sm-6">
      			<a href="#addBancoModal" class="btn btn-success" data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>Adiciona novo banco</span></a>
      			<a href="#deleteBancoModal" class="btn btn-danger" data-toggle="modal"><i class="material-icons">&#xE15C;</i> <span>Apagar</span></a>						
      		</div>
      		
      </div>
  </div>
  <table class="table table-striped table-hover">
    <thead>
        <tr>
    			<th>
    				<span class="custom-checkbox">
    					<input type="checkbox" id="selectAll">
    					<label for="selectAll"></label>
    				</span>
    			</th>
          <th>Descrição</th>
          <th>Código do Banco</th>
          <th>Ações</th>
        </tr>
    </thead>
    <tbody>
      <% @bancos.each do |banco| %>
        <tr>
    			<td>
    				<span class="custom-checkbox">
    					<input type="checkbox" id="checkbox<%=banco.id%>" value="1">
    					<label for="checkbox<%=banco.id%>"></label>
    				</span>
    			</td>
          <td><%= banco.descricao %></td>
          <td><%= banco.codigo %></td>
          <td>
            <a href="#editBancoModal" class="edit" data-toggle="modal" onclick="mountEditForm(<%= banco.to_json %>)"><i class="material-icons" data-toggle="tooltip" title="Editar">&#xE254;</i></a>
            <a href="#deleteBancoModal" class="delete" data-toggle="modal"><i class="material-icons" data-toggle="tooltip" title="Apagar">&#xE872;</i></a>
          </td>
        </tr>
        <% end %>
    </tbody>
  </table>
  <div class="clearfix">
      <div class="hint-text">Mostrando <b><%= @bancos.length %></b> registros</div>
      <ul class="pagination">
          <li class="page-item disabled"><a href="#">Previous</a></li>
          <li class="page-item"><a href="#" class="page-link">1</a></li>
          <li class="page-item"><a href="#" class="page-link">2</a></li>
          <li class="page-item active"><a href="#" class="page-link">3</a></li>
          <li class="page-item"><a href="#" class="page-link">4</a></li>
          <li class="page-item"><a href="#" class="page-link">5</a></li>
          <li class="page-item"><a href="#" class="page-link">Next</a></li>
      </ul>
  </div>
</div>

<!-- Edit Modal HTML -->
<div id="editBancoModal" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
				<div class="modal-header">						
					<h4 class="modal-title">Editar Banco</h4>
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				</div>
				<div class="modal-body">					
					<%= render 'form', :name => 'edit', banco: Banco.find(1) %>					
				</div>
				<div class="modal-footer">
					<input type="button" class="btn btn-default" data-dismiss="modal" value="Cancelar">
					<input type="submit" class="btn btn-info" value="Salvar">
				</div>
		</div>
	</div>
</div>

<!-- Edit Modal HTML -->
<div id="addBancoModal" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">						
				<h4 class="modal-title">Cadastrar Banco</h4>
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			</div>
			<div class="modal-body">					
				<%= render 'form', :name => 'create', banco: Banco.new %>				
			</div>
			<div class="modal-footer">
				<input type="button" class="btn btn-default" data-dismiss="modal" value="Cancelar">
				<input type="submit" class="btn btn-success" value="Adicionar">
			</div>
		</div>
	</div>
</div>
<!-- Delete Modal HTML -->
<div id="deleteBancoModal" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
				<div class="modal-header">						
					<h4 class="modal-title">Apagar Banco</h4>
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				</div>
				<div class="modal-body">					
					<p>Tem certeza que deseja apagar esse registro?</p>
					<p class="text-danger"><small>Esta ação não poderá ser desfeita.</small></p>
				</div>
				<div class="modal-footer">
					<input type="button" class="btn btn-default" data-dismiss="modal" value="Cancelar">
					<%= link_to 'Apagar', @bancos[1], method: :delete, :class =>'btn btn-danger' %>
				</div>
		</div>
	</div>
</div>
