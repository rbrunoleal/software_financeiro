<div class="table-wrapper">
  <div class="table-title">
      <div class="row">
          <div class="col-sm-6">
            <h2>Gerenciar <b>Favorecidos</b></h2>
          </div>
      		<div class="col-sm-6">
      			<a href="#addPessoaModal" class="btn btn-success" data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>Adiciona novo favorecido</span></a>
      			<a href="#deletePessoaModal" class="btn btn-danger" data-toggle="modal"><i class="material-icons">&#xE15C;</i> <span>Apagar</span></a>						
      		</div>
      		
      </div>
  </div>
  <table class="table table-striped table-hover">
    <thead>
        <tr>
    			<th>
    				<span class="custom-checkbox">
    					<input type="checkbox" id="selectAll">
    					<label for="selectAll"></label>
    				</span>
    			</th>
          <th>Identificação</th>
          <th>Nome</th>
          <th>Endereço</th>
          <th>Ações</th>
        </tr>
    </thead>
    <tbody>
      <% @pessoas.each do |pessoa| %>
        <tr>
    			<td>
    				<span class="custom-checkbox">
    					<input type="checkbox" id="checkbox<%= pessoa.id %>" value="1">
    					<label for="checkbox<%=pessoa.id%>"></label>
    				</span>
    			</td>
          <td><%= pessoa.identificador %></td>
          <td data-toggle="tooltip" title="<%= "Pessoa " + pessoa.tipo%>"><%= pessoa.nome %></td>
          <td><%= pessoa.endereco %></td>
          <td>
            <a href="#editPessoaModal" class="edit" data-toggle="modal" onclick="mountEditForm(<%= pessoa.to_json %>)"><i class="material-icons" data-toggle="tooltip" title="Editar">&#xE254;</i></a>
            <a href="#deletePessoaModal" class="delete" data-toggle="modal"><i class="material-icons" data-toggle="tooltip" title="Apagar">&#xE872;</i></a>
          </td>
        </tr>
        <% end %>
    </tbody>
  </table>
  <div class="hint-text">Mostrando <b><%= @pessoas.length %></b> registros</div>
  <%= will_paginate @pessoas, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
  </br>
</div>

<!-- Edit Modal HTML -->
<div id="editPessoaModal" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
				<div class="modal-header">						
					<h4 class="modal-title">Editar Favorecido</h4>
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				</div>
				<div class="modal-body">					
					<%= render 'form', :name => 'edit', pessoa: Pessoa.find(1) %>					
				</div>
				<div class="modal-footer">
					<input type="button" class="btn btn-default" data-dismiss="modal" value="Cancelar">
					<input type="submit" class="btn btn-info" value="Salvar">
				</div>
		</div>
	</div>
</div>

<!-- Edit Modal HTML -->
<div id="addPessoaModal" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">						
				<h4 class="modal-title">Cadastrar Favorecido</h4>
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			</div>
			<div class="modal-body">					
				<%= render 'form', :name => 'create', pessoa: Pessoa.new %>				
			</div>
			<div class="modal-footer">
				<input type="button" class="btn btn-default" data-dismiss="modal" value="Cancelar">
				<input type="submit" class="btn btn-success" value="Adicionar">
			</div>
		</div>
	</div>
</div>
<!-- Delete Modal HTML -->
<div id="deletePessoaModal" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
				<div class="modal-header">						
					<h4 class="modal-title">Apagar Favorecido</h4>
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				</div>
				<div class="modal-body">					
					<p>Tem certeza que deseja apagar esse registro?</p>
					<p class="text-danger"><small>Esta ação não poderá ser desfeita.</small></p>
				</div>
				<div class="modal-footer">
					<input type="button" class="btn btn-default" data-dismiss="modal" value="Cancelar">
					<%= link_to 'Apagar', Pessoa.find(1), method: :delete, :class =>'btn btn-danger' %>
				</div>
		</div>
	</div>
</div>
